{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "(PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1 prisma generate || true) && next build",
    "build:static": "next build",
    "postinstall": "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1 prisma generate || echo 'Prisma generation skipped - will use static data mode'",
    "start": "next start",
    "clean": "pnpm rimraf -i /node_modules/ .next/ && pnpm run build && pnpm run start",
    "lint": "eslint",
    "db:generate": "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1 prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "check": "npm audit && pnpm build:static",
    "check:security": "npm audit",
    "check:changes": "./scripts/check-changes.sh",
    "precommit": "./scripts/pre-commit-check.sh"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.18.0",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.548.0",
    "next": "16.0.0",
    "next-auth": "5.0.0-beta.30",
    "prisma": "^6.18.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
